# Service Configuration
NODE_ENV=production
DOMAIN=logging.alfares.cz
SERVICE_NAME=logging-microservice

# Web UI (admin panel login and frontend port). See README Port Configuration.
AUTH_SERVICE_URL=

# Server Configuration (backend API). See README Port Configuration.
PORT=3367
FRONTEND_PORT=3372
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_STORAGE_PATH=./logs
LOG_ROTATION_MAX_SIZE=100m
LOG_ROTATION_MAX_FILES=10
LOG_TIMESTAMP_FORMAT=YYYY-MM-DD HH:mm:ss

# Network Configuration
NGINX_NETWORK_NAME=nginx-network

# Docker Volume Configuration
DOCKER_VOLUME_BASE_PATH=/srv/storagebox/docker-volumes

# Deployment Configuration (for documentation and scripts)
PROJECT_BASE_PATH=/home/user
SSH_HOST=user@server
